{
    "id": "com.google.maps.directions",
    "name": {
        "en": "Google Maps",
        "nl": "Google Maps"
    },
    "description": {
    	"en": "Never be late for work by starting your day with actual traveling time.",
    	"nl": "Kom nooit meer te laat op werk door je dag te starten met actuele reistijd."
    },
    "images": {
		"large": "./assets/images/large.jpg",
		"small": "./assets/images/small.jpg"
	},
	"category": ["internet","localization"],
    "version": "1.0.0",
    "compatibility": "1.x",
    "author": {
        "name": "Gerard Nijboer",
        "email": "me@gerardnijboer.com"
    },
	"contributors": {
		"developers": [{
			"name": "Jeroen Bos",
			"email": "jeroenbos22@gmail.com"
		}]
	},
    "tags": {
    	"en": ["google", "maps", "directions", "route", "distance", "duration", "car", "transit", "cycling", "walking", "traffic"],
    	"nl": ["google", "maps", "navigatie", "route", "afstand", "reistijd", "auto", "openbaar vervoer", "fietsen", "wandelen", "file"]
    },
    "permissions": [
		"homey:manager:speech-output"
	],
	"flow": {
        "triggers": [
        {
            "id": "gm_drivinginfo_asked",
            "title": {
                "en": "Google maps driving-information asked",
                "nl": "Google maps routeinformatie gevraagd"
            },
            "tokens": [
                {
                    "name": "driving_duration_in_traffic",
                    "type": "number", 
                    "title": {
                        "en": "Current duration",
                        "nl": "Huidige reistijd"
                    },
                    "example": 5
                },
                {
                    "name": "driving_duration",
                    "type": "number", 
                    "title": {
                        "en": "Normal duration",
                        "nl": "Normale reistijd"
                    },
                    "example": 5
                }
            ]
        }],
		"actions": [
			{
				"id": "com_google_maps_directions_driving",
				"title": {
					"nl": "Bereken reistijd via auto",
					"en": "Determine duration via driving"
				},
				"args": [
					{
						"name": "origin",
						"type": "text",
						"placeholder": {
							"en": "Origin",
							"nl": "Vertrekpunt"
						}
					},
					{
						"name": "destination",
						"type": "text",
						"placeholder": {
							"en": "Destination",
							"nl": "Bestemming"
						}
					}
				]
			},
			{
				"id": "com_google_maps_directions_transit",
				"title": {
					"nl": "Bereken reistijd via openbaar vervoer",
					"en": "Determine duration via transit"
				},
				"args": [
					{
						"name": "origin",
						"type": "text",
						"placeholder": {
							"en": "Origin",
							"nl": "Vertrekpunt"
						}
					},
					{
						"name": "destination",
						"type": "text",
						"placeholder": {
							"en": "Destination",
							"nl": "Bestemming"
						}
					}
				]
			},
			{
				"id": "com_google_maps_directions_bicycling",
				"title": {
					"nl": "Bereken reistijd via fietsen",
					"en": "Determine duration via cycling"
				},
				"args": [
					{
						"name": "origin",
						"type": "text",
						"placeholder": {
							"en": "Origin",
							"nl": "Vertrekpunt"
						}
					},
					{
						"name": "destination",
						"type": "text",
						"placeholder": {
							"en": "Destination",
							"nl": "Bestemming"
						}
					}
				]
			},
			{
				"id": "com_google_maps_directions_walking",
				"title": {
					"nl": "Bereken reistijd via wandelen",
					"en": "Determine duration via walking"
				},
				"args": [
					{
						"name": "origin",
						"type": "text",
						"placeholder": {
							"en": "Origin",
							"nl": "Vertrekpunt"
						}
					},
					{
						"name": "destination",
						"type": "text",
						"placeholder": {
							"en": "Destination",
							"nl": "Bestemming"
						}
					}
				]
			}
		]
	}
}